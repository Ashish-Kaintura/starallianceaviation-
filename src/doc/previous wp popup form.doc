 #popup-overlay {
   position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    animation: fadeIn 0.5s ease-in-out;
  }

  .popup-box {
/*     background: rgba(255, 255, 255, 0.95); */
	   background: url("https://i.postimg.cc/Zn1dZVQg/Pop-up-background.jpg")
          no-repeat center center / cover;
        backdrop-filter: blur(2px);
    padding: 30px 25px;
    border-radius: 12px;
    width: 90%;
    max-width: 460px;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
    position: relative;
    animation: slideIn 0.4s ease;
  }

  .popup-box h2 {
    margin-top: 0;
    margin-bottom: 20px;
    text-align: center;
    color: #0056b3;
    font-size: 22px;
  }

  .popup-box input {
    width: 100%;
    padding: 12px 14px;
    margin-bottom: 15px;
    border: 1px solid #b3d1f0;
    border-radius: 6px;
    font-size: 15px;
    transition: border 0.3s;
  }

  .popup-box input:focus {
    border-color: #0073e6;
    outline: none;
  }

  .popup-box button {
    width: 100%;
    padding: 12px;
    background: #232c6b;
    color: white;
    font-size: 16px;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: background 0.3s;
  }

  .popup-box button:hover {
    background: #232c6b;
  }

  .close-btn {
    position: absolute;
    top: 10px;
    right: 16px;
    font-size: 24px;
    color: #333;
    cursor: pointer;
  }

  #form-status {
    text-align: center;
    font-size: 14px;
    margin-top: 12px;
    color: #333;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideIn {
    from {
      transform: translateY(-20px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }