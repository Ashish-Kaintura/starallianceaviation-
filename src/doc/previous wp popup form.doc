 #popup-overlay {
   position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    animation: fadeIn 0.5s ease-in-out;
  }

  .popup-box {
/*     background: rgba(255, 255, 255, 0.95); */
	   background: url("https://i.postimg.cc/Zn1dZVQg/Pop-up-background.jpg")
          no-repeat center center / cover;
        backdrop-filter: blur(2px);
    padding: 30px 25px;
    border-radius: 12px;
    width: 90%;
    max-width: 460px;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
    position: relative;
    animation: slideIn 0.4s ease;
  }

  .popup-box h2 {
    margin-top: 0;
    margin-bottom: 20px;
    text-align: center;
    color: #0056b3;
    font-size: 22px;
  }

  .popup-box input {
    width: 100%;
    padding: 12px 14px;
    margin-bottom: 15px;
    border: 1px solid #b3d1f0;
    border-radius: 6px;
    font-size: 15px;
    transition: border 0.3s;
  }

  .popup-box input:focus {
    border-color: #0073e6;
    outline: none;
  }

  .popup-box button {
    width: 100%;
    padding: 12px;
    background: #232c6b;
    color: white;
    font-size: 16px;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: background 0.3s;
  }

  .popup-box button:hover {
    background: #232c6b;
  }

  .close-btn {
    position: absolute;
    top: 10px;
    right: 16px;
    font-size: 24px;
    color: #333;
    cursor: pointer;
  }

  #form-status {
    text-align: center;
    font-size: 14px;
    margin-top: 12px;
    color: #333;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideIn {
    from {
      transform: translateY(-20px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }



<div id="popup-overlay" style="display: none;">
  <div class="popup-box">
    <span class="close-btn" onclick="closePopup()">×</span>
    <h2>Contact Us</h2>
    <form id="popup-form"> <!-- ✅ Matching form ID -->
      <input type="text" name="name" placeholder="Your Name" required />
      <input type="email" name="email" placeholder="Your Email" required />
	  <input type="tel" name="phone" placeholder="Your Phone Number" required />
      <button type="submit">Send Message</button>
      <p id="form-status"></p>
    </form>
  </div>
</div>
<!-- ✅ Show Popup after 8s + EmailJS Script -->
<!-- ✅ EmailJS v4 Script -->
<!-- ✅ Show Popup + EmailJS Script -->
<script src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"></script>
<script>
  // Show popup after 8s
  setTimeout(() => {
    document.getElementById("popup-overlay").style.display = "flex";
  }, 8000);

  // Close popup
  function closePopup() {
    document.getElementById("popup-overlay").style.display = "none";
  }

  document.addEventListener("DOMContentLoaded", function () {
    setTimeout(() => {
      const form = document.getElementById("popup-form");
      const status = document.getElementById("form-status");

      if (!form) return;

      form.addEventListener("submit", function (e) {
        e.preventDefault();
        status.textContent = "⏳ Sending...";
        status.style.color = "#333";

        emailjs
          .sendForm(
            "service_gf71s76",
            "template_22a4owy",
            form,
            "QDc0P3ycKPetLpC3W" // ✅ v4 needs 'public_' prefix
          )
          .then(() => {
            status.textContent = "✅ Message sent successfully!";
            status.style.color = "green";
            form.reset();
          })
          .catch((error) => {
            console.error("EmailJS Error:", error);
            status.textContent =
              "❌ Failed to send. " + (error?.text || "Please try again.");
            status.style.color = "red";
          });
      });
    }, 2000); // Wait extra time to make sure form loads in popup
  });
</script>